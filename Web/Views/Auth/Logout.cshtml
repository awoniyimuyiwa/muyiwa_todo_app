@using Web.ViewModels;

@model LayoutViewModel<LogoutViewModel>
@{ 
    var pageViewModel = Model.PageViewModel;
}

<div class="logout-page">
    <div class="lead">
        <h1>@Model.Title</h1>
        <p>Would you like to logut of @Model.AppName?</p>
    </div>

    <form asp-controller="Auth" asp-action="PostLogout" method="post">
        @Html.Hidden("redirect_uri", pageViewModel.RedirectUri)
        <div class="form-group">
            <button class="btn btn-primary">Yes</button>
        </div>
    </form>
</div>
