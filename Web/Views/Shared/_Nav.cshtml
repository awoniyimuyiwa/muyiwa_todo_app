@model Web.ViewModels.LayoutViewModel

<div class="nav-page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a href="~/swagger" class="navbar-brand">
            <img src="~/icon.png" class="icon-banner">
            @Model.AppName
        </a>

        @if (Model.IsUserAuthenticated)
        {
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@Model.UserName<b class="caret"></b></a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-action="GetLogout" asp-controller="Auth">Logout</a>
                    </div>
                </li>
            </ul>
        }
    </nav>
</div>

